<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Beever >> Login/Cadastro</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-white flex items-center justify-center min-h-screen">

  <div class="w-full max-w-sm p-6 shadow-lg rounded-xl">

    <!-- Header -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-1">Entrar</h2>
      <div class="h-1 bg-gray-300 rounded-full w-2/3"></div>
    </div>

    <!-- Email Input -->
    <div class="mb-4">
      <label class="block text-sm mb-1">E-mail</label>
      <div class="relative">
        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
          📧
        </span>
        <input type="email" placeholder="Digite seu e-mail" class="pl-10 pr-3 py-2 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-yellow-400">
      </div>
    </div>

    <!-- Senha Input -->
    <div class="mb-4">
      <label class="block text-sm mb-1">Senha</label>
      <div class="relative">
        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">👁️</span>
        <input type="password" placeholder="Digite sua senha" class="pl-10 pr-3 py-2 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-yellow-400">
      </div>
    </div>

    <div class="mb-4">
      <label class="block text-sm mb-1">Confirmar Senha</label>
      <div class="relative">
        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">👁️</span>
        <input type="password" placeholder="Digite sua senha novamente" class="pl-10 pr-3 py-2 border rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-yellow-400">
      </div>
    </div>

    <!-- Botões sociais -->
    <div class="flex justify-between mb-4">
      <button class="flex-1 border rounded-lg py-2 mr-2 text-sm flex items-center justify-center gap-2">
        <img src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg" class="w-4 h-4"> Google
      </button>
      <button class="flex-1 border rounded-lg py-2 ml-2 text-sm flex items-center justify-center gap-2">
        <img src="https://upload.wikimedia.org/wikipedia/commons/0/05/Facebook_Logo_%282019%29.png" class="w-4 h-4"> Facebook
      </button>
    </div>

    <!-- Botão Continuar -->
    <button class="w-full bg-yellow-400 text-white py-3 rounded-lg font-semibold hover:bg-yellow-500 transition-colors">
      Continuar
    </button>

  </div>

</body>
</html>
